{% extends 'base.html.twig' %}

{% block title %}Convention{% endblock %}

{% block body %}
    <h1>Liste des conventions</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Objet</th>
                <th>Id</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Montant</th>
                <th>LibellePDF</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for convention in conventions %}
            <tr>
                <td>{{ convention.objet }}</td>
                <td>{{ convention.id }}</td>
                <td>{{ convention.dateDebut ? convention.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ convention.dateFin ? convention.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ convention.montant }}</td>
                <td>{{ convention.libellePDF }}</td>
                
                <td>
                    <a href="{{ path('convention_show', {'id': convention.id}) }}">Afficher</a>
                    <a href="{{ path('convention_edit', {'id': convention.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucun convention trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('convention_new') }}"><button class="btn btn-secondary">Ajouter une convention</button></a>
{% endblock %}
