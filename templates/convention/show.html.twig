{% extends 'base.html.twig' %}

{% block title %}Convention{% endblock %}

{% block body %}
    <h1>Convention</h1>

    <table  class="table table-striped">
        <tbody>
            <tr>
            <tr>
                <th>Objet</th>
                <td>{{ convention.objet }}</td>
            </tr>
                <th>Id</th>
                <td>{{ convention.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ convention.dateDebut ? convention.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ convention.dateFin ? convention.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ convention.montant }}</td>
            </tr>
            <tr>
                <th>PDF</th>
                <td>{{ convention.libellePDF }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('convention_index') }}">retour au liste</a>

    <a href="{{ path('convention_edit', {'id': convention.id}) }}">Modifier</a>

    {{ include('convention/_delete_form.html.twig') }}
{% endblock %}
